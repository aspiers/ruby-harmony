\version "2.17.9"
\include "english.ly"

\paper {
  indent = #0
  paper-width = 20\cm
  paper-height = 8\cm
  ragged-right = ##t
  ragged-last = ##t
}

emphasisColor = #(x11-color 'ForestGreen)
emphasisColor = #red

emphasise = \once {
  \large
  \override NoteHead.color = \emphasisColor
  \override Stem.color = \emphasisColor

  % Would need to stop/restart staff for this to work; see
  % example of how to do that here:
  % http://lsr.dsi.unimi.it/LSR/Item?id=700 
  \override Staff.LedgerLineSpanner.color = \emphasisColor
}

  \header {
    tagline = ""
  }

\score {
  \new Score \with {
    \remove "System_start_delimiter_engraver"
    \remove "Bar_number_engraver"
  } {
    \new Staff {
      \relative c' {
        <<%= chord %>>1^\markup { \tiny "<%= descr %>" }
      } \bar "||" |

      \time 7/4
      \small
      <% for name, notes in scales -%>
      <%   notes[0] += "4^\\markup { \\tiny \"#{name}\" }" %>
      \relative c' {
        <%= notes.join " " %> |
      }
      <% end %>
      \break
    }
  }
}

\layout {
  \context {
    \Staff
    \remove "Time_signature_engraver"
  }
}
